@model TzuChiBackend.ViewModels.EBookSearchModel
@using Core.Extensions;

@{
    ViewBag.Title = "電子書管理";   
}

<style>
    input,
    select,
    textarea {
        max-width: 100%;
    }
</style>


<h2>@ViewBag.Title</h2>

<div>
    <label class="control-label">總筆數：(@Model.DataCount)</label>
    <div class="btn-group">
        <a href="@Url.Action("Create")" class="btn btn-primary">
            新增
        </a>

    </div>
</div>


<div style="padding-top:5px;">
    <table class="table">
        <thead>
            <tr style="background-color:#CCCCCC">
                <th style="width:5%">
                    編號
                </th>

                <th style="width:18%">
                    標題
                </th>

                <th style="width:30%">
                    xml檔名
                </th>
                <th style="width:10%">
                    建檔日期
                </th>


                <th style="width:15%">
                    &nbsp;
                </th>
            </tr>
        </thead>
        @if (Model.DataCount > 0)
        {
            <tbody>

                @foreach (var item in Model.EBookViewList)
                {
                    <tr>
                       
                        <td> @item.Number </td>
                        <td> @item.Title </td>
                        <td> @item.FileName </td>
                        <td> @item.CreatedAt.ToString("yyyy/MM/dd") </td>



                        <td>
                            <a href="@Url.Action("Edit",new {@id=item.Id })"  class="btn btn-primary  btn-sm btn-edit" title="編輯">
                                <span class="glyphicon glyphicon-pencil"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        }

    </table>


</div>

