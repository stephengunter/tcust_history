                    {
                        char temp = contentName[i];
                        if (reg.IsMatch(temp.ToString())) {
                            engCount++;
                        }
                    }
                    
                    for (int i = 0; i < maxWordlength - count + (engCount/2); i++)
                    {
                        splitChar += "..";
                    }
                    <ul class="Search">
