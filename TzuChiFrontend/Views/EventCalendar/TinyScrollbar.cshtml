@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    @*@Scripts.Render("~/Scripts/EventCalendar")*@
    <script type="text/javascript" src="https://cdn.jsdelivr.net/jquery.slick/1.3.7/slick.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
    <script type="text/javascript" src="http://www.pureexample.com/js/lib/jquery.ui.touch-punch.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $('.slide-el img').click(function () {
                var src = $(this).attr('src');
                $('#left-album-el').fadeOut('slow', function () {
                    $('#left-album-el').attr('src', src).fadeIn('slow');
                });
            });
        });
    </script>

}

@section styles{
    @*@Styles.Render("~/Content/EventCalendar")*@
    <link rel="stylesheet" type="text/css" href="http://cdn.jsdelivr.net/jquery.slick/1.3.7/slick.css" />
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.9.2/themes/base/jquery-ui.css" />
    <style>
        ::-webkit-scrollbar {
            width: 12px;
        }

        ::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px #ff6a00; /*待確認*/
            -webkit-border-radius: 10px;
            background: #ff0000; /*scroll背景色*/
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            -webkit-border-radius: 10px;
            border-radius: 10px;
            background: #00ffff;
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.5);
        }

            ::-webkit-scrollbar-thumb:hover {
                background: rgb(182, 255, 0); /*滑鼠放上*/
            }

            ::-webkit-scrollbar-thumb:window-inactive {
                background: rgb(128, 128, 128); /*視窗未被選擇時*/
            }

        body {
            overflow: hidden;
        }

        HTML, BODY {
            color: black;
            scrollbar-face-color: #b6ff00;
            scrollbar-arrow-color: #b6ff00;
            scrollbar-track-color: #b6ff00;
            scrollbar-shadow-color: #b6ff00;
            scrollbar-highlight-color: #b6ff00;
            scrollbar-3dlight-color: #b6ff00;
            scrollbar-darkshadow-Color: #202020;
        }

        #left-box {
            background-color: #ff6a00;
            width: 300px;
            position: relative;
            float: left;
            height: 400px;
            overflow: hidden;
        }

        #slide-album {
            background-color: antiquewhite;
            width: 100px;
            float: left;
            height: 400px;
            overflow: auto;
        }

        .slide-el img {
            width: 80px;
        }

        #left-datetime {
            width: auto;
            background-color:white;
            z-index: 5;
            opacity:0.5;
        }

        #left-top {
            position: relative;
        }

        #left-text {
            position: relative;
            background-color: ActiveCaption;
            height: 100px;            
        }

        #left-album {
            background-color: crimson;
            height: 320px;
            z-index: 1;
            margin: -20px
        }

        #left-album-el {
            position: relative;
            top: 50%;
            left: 50%;
            height: 200px;
            width: 200px;
            margin: -100px 0 0 -100px;
        }

        #frame {
            position: relative;
        }

        .left-datetime {
            position: absolute;
            z-index: 5;
        }
    </style>
}

<!-- Button trigger modal -->
<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Launch demo modal
</button>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="menu" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"></div>
            <div class="modal-body">
                <div id="frame">
                    <div id="left-box">
                        <div id="left-top">
                            <div id="left-datetime">19-02-1984</div>
                            <div id="left-album">
                                <img id="left-album-el" src="http://kenwheeler.github.io/slick/img/lazyfonz1.png?1411537277348">
                            </div>
                        </div>
                        <div id="left-text">left-text</div>
                    </div>

                    <div id="slide-album">
                        <div class="slide-el">
                            <img src="http://kenwheeler.github.io/slick/img/lazyfonz1.png?1411537277348" style="opacity: 1;">
                        </div>
                        <div class="slide-el">
                            <img src="http://kenwheeler.github.io/slick/img/lazyfonz2.png?1411537277348" style="opacity: 1;">
                        </div>
                        <div class="slide-el">
                            <img src="http://kenwheeler.github.io/slick/img/lazyfonz3.png?1411537277348" style="opacity: 1;">
                        </div>
                        <div class="slide-el">
                            <img src="http://kenwheeler.github.io/slick/img/lazyfonz1.png?1411537277348" style="opacity: 1;">
                        </div>
                        <div class="slide-el">
                            <img src="http://kenwheeler.github.io/slick/img/lazyfonz2.png?1411537277348" style="opacity: 1;">
                        </div>
                        <div class="slide-el">
                            <img src="http://kenwheeler.github.io/slick/img/lazyfonz3.png?1411537277348" style="opacity: 1;">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>




