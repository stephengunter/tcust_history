<script src="~/Scripts/imgDragforbidden.js"></script>
<script src="~/Scripts/hammer.js-master/hammer.js"></script>
    <script>
        $(function () {
            setCenter();
            iniRightSlick();
            iniCenterSlick();

            //$('#right-slick').find('.draggable').css('margin-top:-30px !important');

            
            $('.wbox1').fadeIn();

        });

        function setCenter() {
            var mainWidth = $(".wbox1").width();
            var centerWidht = $('#flowmask').width();
            var setCenterW = mainWidth / 2 - centerWidht / 2;

            var mainHeight = $(".wbox1").height();
            var centerHeight = $('#flowmask').height();
            var setCenterH = mainHeight / 2 - centerHeight / 2;
            $('#flowmask').offset({
                top: setCenterH,
                left: setCenterW - '100'
            });
        }

        function iniRightSlick() {
            $('#right-slick').slick({
                centerMode: true,
                dots: false,
                vertical: true,
                slidesToShow: 1,
                infinite: true,
                arrows: true,
                draggable: false
            });

            $('.picmenu2').click(function () {
                $('.slick-prev').click();
            });

            $('.picmenu3').click(function () {
                $('.slick-next').click();
            });
        }

        function iniCenterSlick() {
            $('#center-slick').slick({
                centerMode: true,
                infinite: true,
                //centerPadding: '200px',
                slidesToShow: 1,
                arrows: false
            });
        }

    </script>

}

