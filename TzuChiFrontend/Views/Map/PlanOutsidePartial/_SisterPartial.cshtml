    <!--紅點對位區 Start-->
    <div id="ballTip3" class="ballTip">
        <div class="Tip1">
            <a id="schoolName" href="javascript:popup()"><span class="contentName"></span></a>
        </div>
        <div class="Tip2">
            <img src="@Url.Content("~/Images/Map/balldown.png")" width="30" height="30">
        </div>
    </div>
    <div id="ball1"><a href="javascript:void(0)"><img src="@Url.Content("~/Images/Map/ball.png")" width="30" height="30" border="0"></a></div>
    <!--紅點對位區 End-->

    <!-- 所有座標 Start-->
    @foreach (var item in ViewBag.Data)
    {
        string pointX = item.Coordinate.PointX + "px";
        string pointY = item.Coordinate.PointY + "px";
        <div class="ballAll" style="left:@pointX ;top:@pointY "><a href="javascript:void(0)"><img src="@Url.Content("~/Images/Map/ball.png")" width="30" height="30" border="0"></a></div>
    }
