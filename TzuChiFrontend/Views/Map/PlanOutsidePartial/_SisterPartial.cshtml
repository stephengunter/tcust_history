     <section class="main">
        <div class="wrapper-demo">
            <div id="dd" class="wrapper-dropdown-5 dd" tabindex="1" style="z-index:3;margin-top:15px;">
                <span id="menuShow">所在地</span>
                <ul class="dropdown dropdown-country">
                    @foreach (var item in ViewBag.SearchList)
                    {
                        <li>
                            <a href="javascript:void(0)" key="@item.Key">
                                @item.Value
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </section>
    <section class="main" style="margin: -30px 0px 0px 0px;">
        <div class="wrapper-demo">
            <div id="dd" class="wrapper-dropdown-5 dd" tabindex="1" style="z-index:2;margin-top:40px;">
                <span id="menuYear">年度</span>
                <ul class="dropdown dropdown-year">
                    @foreach (var item in ViewBag.YearList)
                    {
                        <li>
                            <a href="javascript:void(0)" key="@item">
                                @item
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </section>
    <ul class="btnright"><a href="javascript:search('@TzuChiClassLibrary.BO.PlanOutsideModel.CATEGORYQUTSIDEID_SISTER')">搜尋</a></ul>
</div>

<div id="menuDiv2" class="menu2bk">
    <div class="arrowU"><a href="javascript:scrollUpMenu()"></a></div>
