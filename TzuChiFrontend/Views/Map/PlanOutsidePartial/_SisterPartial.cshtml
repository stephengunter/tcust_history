    <div class="menuBTN" id="menuBTN" style="overflow:hidden;margin-left:0px">
        <div id="menuBlock" style="display:inline-block">
            @foreach (var item in ViewBag.Data)
            {
                <div class="mBTN"><a href='javascript:coordinate("@item.ContentID")'>@item.ContentName</a></div>
            }
        </div>
        </div>
        <!--學校分類 End-->
        <div class="arrowD"><a href="javascript:scrollDownMenu()"></a></div>
    </div>
    <!-- 資料顯示 Start-->
    <div id="dataShow" style="display:none">
        <div id="menuDiv3" class="menu3bk">
            <div class="WINup">
                <div class="WINclose"><a href="javascript:popupClose()"></a></div>
            </div>
            <div class="WINdown">
                <div class="WINbkL">
                    <div class="WINTitle">相  簿</div>
                    <div id="picDiv1"></div>
                    <div style="float:left;width:735px;height:550px;">
                        <img id="picShow" src="" border="0" class="WINglow1">
                    </div>
                    <div class="WINsmall">
                        <div class="arrowL"><a href="#"></a></div>
                        <div class="WINsmall2" style="overflow:hidden;">
                        </div>
                        <div class="arrowR"><a href="#"></a></div>
                    </div>
                </div>
                <div class="WINbkR">
                    <div class="WINTitle">學校介紹</div>
                    <div class="WINEng"><a href="javascript:changeLanguage()"><img src="@Url.Content("~/Images/Map/btn5.png")" width="178" height="78" border="0"></a></div>
