            $('.dropdown-partition li a').click(function () {
                $('#menuPartition').html($(this).html());
                $('#menuPartition').attr('key', $(this).attr('key'));
                partitionSiteLogic($(this).html().trim());
            });
            $('.dropdown-site li a').click(function () {
