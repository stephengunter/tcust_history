            if((position + ev.deltaY) < 10 && (position + ev.deltaY) > (-blockHeight + menuBlockHeight )){
               panStart = true;
               $('#menuBlock').css("margin-top", position + ev.deltaY);
            }
            else{
               if(panStart){
                   position = position + ev.deltaY;
                   panStart = false;
               }
            }
